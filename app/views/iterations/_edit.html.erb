<li id="<%= dom_id iteration %>">
 	<%= form_for iteration, 
 	            :as => :iteration,
 	            :remote => true,
              :url => project_feature_iteration_path(@project, @feature, iteration),   
              :loading => 'App.disableProjectForm()',
              :complete => 'App.enableProjectForm()',
              :html => {:id => 'iteration-form', :method => :put } do |f| %>

	  <%= render :partial => 'iterations/form', :locals => { :iteration => iteration, :f => f }%>

 
 	  <%= submit_tag 'Edit iteration' %> or 

      <%= link_to 'Cancel', cancel_project_feature_iteration_path(@project, @feature, iteration), 
	                 :method => :get,
	                 :remote => true %>

 	  <%= image_tag 'indicator.gif', :id => 'form-indicator', :style => 'display:none;' %>

 	<% end %>

</li>