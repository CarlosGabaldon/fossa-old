<label for="task_name">Name:</label><br />
<%= f.text_field 'name', :size => 60 %><br />

<label for="task_description">Description:</label><br />
<%= f.text_area 'description',  :size => "60x10" %><br />

<label for="task_days">Days to complete:</label><br />
<%= select :task, :days, (1..5).to_a  %><br /> <br />

<label for="task_category">Priority:</label><br />
<%= select :task, :priority_id, @priorities.collect {|p| [ p.name, p.id ] } %><br /> <br />

<label for="task_user">Assigned to:</label><br />
<%= select :task, :user_id, @users.collect {|u| [ u.login, u.id ] } %><br /> <br />